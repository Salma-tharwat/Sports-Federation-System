        <ComboBox x:Name="Department" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" Margin="221,260.333,0,0" Grid.Row="4" FontSize="16" FontFamily="Traditional Arabic" >
            <ComboBoxItem Content="HR"/>
            <ComboBoxItem Content="Coach"/>
            <ComboBoxItem Content="Accounting"/>
        </ComboBox>
        <Button x:Name="button" Content="" HorizontalAlignment="Left" BorderThickness="0" Width="30" Height="Auto" Margin="3,1,0,20.667" Grid.RowSpan="2" RenderTransformOrigin="-3.694,0.266" Click="button_Click">
            <Button.Background>
                <ImageBrush ImageSource="wrongg.png"/>
            </Button.Background>
        </Button>
        <RadioButton x:Name="Male" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="318,26.614,0,0" Grid.Row="4"/>
    </Grid>
</Window>
