        <RadioButton GroupName="Medical_Form" x:Name="Yes" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="222,59.333,0,0" RenderTransformOrigin="-12.229,1.917" Grid.Row="4" Height="30" Width="26"/>
        <RadioButton GroupName="Medical_Form" x:Name="No" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="318,58.333,0,0" Grid.Row="4" Height="30" Width="19"/>
        <RadioButton GroupName="Gender" x:Name="Female" Content="" HorizontalAlignment="Left" Margin="221,27.333,0,0" VerticalAlignment="Top" Grid.Row="4" Height="32" Width="27"/>
