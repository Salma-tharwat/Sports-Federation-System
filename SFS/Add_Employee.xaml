        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFS"
        mc:Ignorable="d"
        Title="Add_Employee" Height="450" Width="550">
    <Grid Margin="0,0,0.333,0.333">
        <Grid.Background>
            <ImageBrush ImageSource="new.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="306*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Salary"  TextAlignment="Center" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" Margin="292,87.333,0,0" Grid.Row="4" FontSize="16" FontFamily="Traditional Arabic"/>
        <TextBox x:Name="number" TextAlignment="Center" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Margin="222,5.667,0,0" Grid.Row="3" Grid.RowSpan="2" FontSize="16" FontFamily="Traditional Arabic"/>
